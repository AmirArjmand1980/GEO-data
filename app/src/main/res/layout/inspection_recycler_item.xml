<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".95"
        android:layout_marginRight="10dp"
        android:background="@color/transparent"

        android:orientation="vertical">


        <TextView
            android:id="@+id/Sensor_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:text="Conductivity Sensor"
            android:textColor="@color/geodata"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight=".75"
                android:gravity="center_vertical"
                android:text="Number of Working Sensor"
                android:textColor="@color/geodata"
                android:textStyle="normal" />
            <!--<com.example.wheel.WheelView-->
            <!--android:id="@+id/Wheel1"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight=".25" />-->
            <EditText
                android:id="@+id/NoWorkSen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:backgroundTint="@color/geodata"
                android:gravity="center"
                android:inputType="number"
                android:outlineAmbientShadowColor="@color/geodata"
                android:outlineSpotShadowColor="@color/geodata"
                android:shadowColor="@color/geodata"
                android:textColor="@color/geodata"
                android:textColorHighlight="@color/geodata"
                android:textColorLink="@color/geodata" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight=".75"
                android:gravity="center_vertical"
                android:text="Number of Spare Sensor"
                android:textColor="@color/geodata"
                android:textStyle="normal" />
            <!--<com.example.wheel.WheelView-->
            <!--android:id="@+id/Wheel2"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight=".25" />-->

            <EditText
                android:id="@+id/NoSprSen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:backgroundTint="@color/geodata"
                android:gravity="center"
                android:inputType="number"
                android:outlineAmbientShadowColor="@color/geodata"
                android:outlineSpotShadowColor="@color/geodata"
                android:shadowColor="@color/geodata"
                android:textColor="@color/geodata"
                android:textColorHighlight="@color/geodata"
                android:textColorLink="@color/geodata" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight=".5"
                android:gravity="center_vertical"
                android:text="Sensor Type"
                android:textColor="@color/geodata"
                android:textStyle="normal" />
            <!--<com.example.wheel.WheelView-->
            <!--android:id="@+id/Wheel3"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight=".25"-->
            <!--/>-->

            <EditText
                android:id="@+id/SenType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:backgroundTint="@color/geodata"
                android:gravity="center"
                android:inputType="textCapWords"
                android:outlineAmbientShadowColor="@color/geodata"
                android:outlineSpotShadowColor="@color/geodata"
                android:shadowColor="@color/geodata"
                android:textColor="@color/geodata"
                android:textColorHighlight="@color/geodata"
                android:textColorLink="@color/geodata"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight=".4"
                android:gravity="center_vertical"
                android:text="Calibration Test"
                android:textColor="@color/geodata"
                android:textStyle="normal" />

            <RadioGroup
                android:id="@+id/radio2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"

                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/No"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/geodata"
                    android:checked="false"
                    android:gravity="center"

                    android:text="Not OK"
                    android:textColor="@color/geodata"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/Yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:buttonTint="@color/geodata"

                    android:checked="false"
                    android:gravity="center"
                    android:text="OK"
                    android:textColor="@color/geodata"
                    android:textSize="15sp" />

            </RadioGroup>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
