<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".SignUp">

    <ImageView
        android:layout_width="146dp"
        android:layout_height="111dp"
        android:layout_gravity="center"
        android:src="@drawable/logorange" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="Register new User"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/geodata"
            android:drawableLeft="@drawable/ic_email_white_24dp"
            android:drawablePadding="10dp"
            android:hint="Enter your Email Address"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textColorHint="#cccccc"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/Mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="phone"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/geodata"
            android:drawableLeft="@drawable/ic_local_phone_white_24dp"
            android:drawablePadding="10dp"
            android:hint="Enter your Mobile Number"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textColorHint="#cccccc"
            android:textSize="17sp" />
        <EditText
            android:id="@+id/Pass1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/geodata"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Enter new Password"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textColorHint="#cccccc"
            android:textSize="17sp" />
        <EditText
            android:id="@+id/Pass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"                        android:inputType="textPassword"

            android:layout_marginRight="20dp"
            android:backgroundTint="@color/geodata"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Enter new Password again"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textColorHint="#cccccc"
            android:textSize="17sp" />



        <Button
            android:id="@+id/Signup"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/roundbutton"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="SIGN UP"
            android:textColor="@color/geodata"
            android:textStyle="bold" />



    </LinearLayout>

   
</LinearLayout>
